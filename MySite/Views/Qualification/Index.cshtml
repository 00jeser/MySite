
@if (ViewBag.Br == "Mobile")
{
    <section class="content">
    </section>
}
else
{
    <section class="content">
        @foreach (var i in ViewBag.works)
        {
            <a href="@i.URL">
                <div style="margin: 3px; margin-left: 10vw; margin-right: 10vw;" class="MetroButton MetroButtonA">
                    <img src="@i.Image" style="width:8vw;" />
                    <div style="width:69vw; height:100%; text-align:left; float:right;">
                        <p class="title">
                            @i.Title
                        </p>
                        <p class="discr">
                            @i.Description
                        </p>
                    </div>
                </div>
            </a>
        }
    </section>
}